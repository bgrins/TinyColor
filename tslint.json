{
  "extends": [
    "tslint-config-standard",
    "tslint-config-prettier"
  ],
  "rules": {
    "semicolon": [true, "always"],
    "prefer-const": true,
    "no-unused-variable": true,
    "prefer-template": [true, "allow-single-concat"],
    "ordered-imports": [
      true,
      {
        "import-sources-order": "lowercase-last",
        "named-imports-order": "lowercase-first"
      }
    ]
  }
}
